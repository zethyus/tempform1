            height: 100%;
        }

        #timer {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background: linear-gradient(to right, #4CAF50 100%, #f44336 0%);
            color: white;
            text-align: center;
            font-size: 24px;
            padding: 10px 0;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            z-index: 1000;
            transition: background 0.2s ease;
        }

        #form-container {
            margin-top: 60px; /* Espaço para o temporizador */
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        button {
            padding: 15px 30px;
            font-size: 18px;
            color: white;
            background-color: #4CAF50;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 20px;
        }

        button:hover {
            background-color: #45a049;
        }

        /* Responsividade para celulares */
        @media (max-width: 768px) {
            #timer {
                font-size: 18px;
                padding: 8px 0;
            }

            button {
                font-size: 16px;
                padding: 12px 24px;
            }
        }

        /* Estilos da sobreposição (overlay) */
        #overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.8);
            display: none; /* Invisível até o tempo acabar */
            justify-content: center;
            align-items: center;
            z-index: 2000;
        }

        #overlay-content {
            text-align: center;
            color: white;
            font-size: 24px;
        }

        #overlay-content input {
            padding: 10px;
            font-size: 18px;
            margin-top: 20px;
            border: none;
            border-radius: 5px;
        }

        #overlay-content button {
            padding: 10px 20px;
            font-size: 18px;
            margin-top: 10px;
            border: none;
            background-color: #4CAF50;
            color: white;
            border-radius: 5px;
            cursor: pointer;
